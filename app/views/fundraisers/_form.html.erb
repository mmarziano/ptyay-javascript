<%= form_for @fundraiser do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: true %></br>
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control", required: true %></br>
    <%= f.label :goal %>
    <%= f.text_field :goal, class: "form-control", required: true %></br>
    <%= f.label :school_year %>
    <%= f.collection_select :school_year, school_year, :to_str, :to_str, {}, {class: "form-control", :required => true}  %></br>
<%= f.submit class: "btn btn-outline-light" %>
<% end %>

