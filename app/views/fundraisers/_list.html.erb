
<% @fundraisers.each do |f| %>
    <h2 style="color: rgb(0, 141, 184)"><%= f.title %></h2>
    <h4>Price per attendee: $<%=f.price%></h4>
    <h4>Status: <%= f.status %></h4>
    <div class="line"></div>
    <h3>Number of Attendees: <%= Reservation.total_attendees(f) %></h3>
    <h3>Students Attending: <%= Reservation.student_attendees(f) %></h3>
    <table class="table table-striped text-center">
            <tr>
                <th><h3>Attendee Name</h3></th>
                <th><h3>Grade</h3></th>
            </tr>
            <% Reservation.attendees_list(f).each do |a| %>
                <tr>
                        <td><%= a.full_name %></td>
                        <td><%= a.grade %></td>
                </tr>
            <% end %>  
        </table>
<% end %>