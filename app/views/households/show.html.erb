<div class="clear"></div>

<div class="row">
    <div class="header-frame text-center">
        <h1>Household Information</h1>
    </div>
</div>

                 
    <div class="row clearfix">
            <div class="frame text-center">
                <table class="table table-striped">
                    <tr>
                        <th><h3>Student Name</h3></th>
                        <th><h3>Grade</h3></th>
                        <th><h3>Action</h3></th>
                    </tr>
                        <% @household.students.each do |s| %>
                        <tr>
                            <td><%= s.full_name %></td>
                            <td><%= s.grade %></td>
                            <td><%= link_to "Edit", edit_household_student_path(s), :class => "btn btn-primary"%></td>
                        </tr>
                        <% end %>
       
                </table>
            </div>
        </div>  
        <%= link_to 'Add Student', new_household_student_path(@household), :class => "btn btn-success" %>

