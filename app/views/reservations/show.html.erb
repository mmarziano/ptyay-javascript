<div class="clear"></div>

<div class="header-frame">
    <h1>Confirmed!</h1>
</div>

<div class="frame">
    <h3 style="color: rgb(0, 141, 184)"><%=@fundraiser.title%></h3>
    <div class="line"></div>
    <h5>Location: <%= @fundraiser.fundraiser_info("location") %></h5>
    <h5>Event Date: <%= @fundraiser.format_date %></h5>
    <h5>Event Time: <%= @fundraiser.time.strftime("%I:%M %p") unless @fundraiser.time.nil? %></h5>
    <h5>Event Duration: <%= @fundraiser.fundraiser_info("duration") %> minutes</h5>
    <h5>Event Price: $<%= @fundraiser.fundraiser_info("price") %></h5>

    <table class="table table-striped">
    <tr>
        <th><h3>Attendees</h3</th>
        <th><h3>Grade</h3></th>
    </tr>
        <% Reservation.household_attendees_list(current_user, @fundraiser).each do |a| %>
            <tr>
                    <td><%= a.full_name %></td>
                    <td><%= a.grade %></td>
            </tr>
        <% end %>  
    </table>
    <%= link_to "Cancel Reservation", reservation_path(@reservation), method: :delete, class: "btn btn-danger push-right", style: "margin-left: 10px;"%>
    <%= link_to "Edit Reservation", edit_fundraiser_reservation_path(@fundraiser, @reservation), class: "btn btn-primary push-right"%>
   

</div>

