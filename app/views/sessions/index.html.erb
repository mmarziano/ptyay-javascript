<div class="jumbotron-fluid">
    <div class="container-fluid full-panel">
        <div class="row clearfix">
                <img class="logo img-fluid" src="/assets/ptyay.png" alt="logo">
        </div>
        <div class="row clearfix">
            <div id="tagline" class="col-md-5 col-sm-5">
                <h1>Fundraising made happy &#9786</h1>
                <span>The online fundraising resource for school communities.</span>
            </div>
            <div class="col-md-7 col-sm-7">
                <div class="login">
                    <div class="card-body"> 
                        <h1>Login to your Account</h1>    
                            <%= form_tag ("/login") do%>
                        
                                <%= label_tag :email %>
                                <%= email_field_tag :email, nil ,class: "form-control" %></br>
                        
                                <%= label_tag :password %>
                                <%= password_field_tag :password, nil ,class: "form-control" %></br>
                        
                                <%= submit_tag "Sign In", class: "btn btn-primary btn-lg btn-block" %></br>
                                <%= link_to "Log In with Google", '/auth/google_oauth2', class: "btn btn-primary btn-lg btn-block" %>
                            <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
            