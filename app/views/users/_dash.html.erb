<div class="clear"></div>

<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="header-frame text-center">
            <h1>Profile</h1>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="header-frame text-center">
            <h1>Household</h1>
        </div>
    </div>
</div>
    <div class="row clearfix">
        <div class="col-md-6 col-sm-6">
            <div class="frame text-center">
                <table class="table table-striped">
                    <tr>
                        <th><h3>Student Name</h3></th>
                        <th><h3>Grade</h3></th>
                        <th><h3>Action</h3></th>
                    </tr>
                        <% @household.students.each do |student| %>
                        <tr>
                            <td><%= student.full_name %></td>
                            <td><%= student.grade %></td>
                            <td><%= link_to "Edit", edit_student_path(student), :class => "btn btn-primary"%></td>
                        </tr>
                        <% end %>
       
                </table>
            </div>
        </div>
    </div>  
        <%= link_to 'Add Student', new_household_student_path(@household), :class => "btn btn-success" %>

